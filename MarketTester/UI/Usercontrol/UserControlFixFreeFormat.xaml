<UserControl x:Class="MarketTester.UI.Usercontrol.UserControlFixFreeFormat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MarketTester.UI.Usercontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0" Text="{DynamicResource StringTag}" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBlock Grid.Column="1" Grid.Row="0" Text="{DynamicResource StringValue}" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBox Grid.Column="0" Grid.Row="1" Text="{Binding TextTag}" VerticalAlignment="Center" Margin="10"/>
            <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding TextValue}" VerticalAlignment="Center" Margin="10"/>
        </Grid>
        <Button Grid.Column="1" Grid.Row="0" Width="60" Height="30" Command="{Binding CommandAddTagValuePair}" Content="{DynamicResource StringAdd}" Margin="0"/>
        <DataGrid ItemsSource="{Binding TagValuePairs}" BorderBrush="{DynamicResource BackgroundTernary}" Grid.Column="0" Grid.Row="1" Background="Transparent"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.Header>
                        <TextBlock Text="{DynamicResource StringSelect}"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsChecked}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Tag}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="{Binding StringTag}"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Value}">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="{Binding StringValue}"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
            </DataGrid.Columns>
            
        </DataGrid>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
            <Button Width="60" Content="{DynamicResource StringDelete}" Command="{Binding CommandDeleteTagValuePair}" Margin="0,10,0,0" Height="40"/>
            <Button Width="60" Content="{DynamicResource StringClear}" Command="{Binding CommandClearTagValuePairs}" Margin="0,50,0,0" Height="80"/>
        </StackPanel>
        
    </Grid>
</UserControl>
